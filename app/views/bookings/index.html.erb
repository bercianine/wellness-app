<% @bookings.each do |booking| %>
  <div class="card pt-2 w-100 mb-3">
    <div class="card-body d-flex" style="gap: 40px;">
      <div class="d-flex" style="gap: 8px;">
        <p class="card-text text-secondary"><i>what:</i></p>
        <p class="card-text"><%= booking.activity.name %></p>
      </div>
      <div class="d-flex" style="gap: 8px;">
        <p class="card-text text-secondary"><i>date:</i></p>
        <p class="card-text"><%= booking.date %></p>
      </div>
    </div>
  </div>
<% end %>

<%= link_to "Log out", destroy_user_session_path, class: "", data: {turbo_method: :delete} %>
