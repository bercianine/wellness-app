<h1>Activities</h1>
<div class="main-grid">
  <% @activities.each do |activity| %>
    <%= link_to(activity_path(activity)) do %>
      <div class="card-activity">
        <img src="<%= activity.img_url %>" alt="<%= activity.name %>">
        <h5 class="card-title"><%= activity.name %></h5>
      </div>
    <% end %>
  <% end %>
</div>
