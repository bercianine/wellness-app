<div class="row justify-content-center">
   <div class="col-12 col-lg-4">
     <h4 class="text-center mb-5">Log in</h4>
   </div>
 </div>
 <div class="row justify-content-center">
    <div class="col-4">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Log in", { class: "btn btn-primary w-100 mt-4", style: "background-color: #E4768A; border: 0;" } %>
        </div>
      <% end %>

      <div class="d-flex justify-content-center mt-3" style="gap: 16px; color: #E4768A;">
        <%= render "devise/shared/links" %>
      </div>

    </div>
 </div>
